{
  "listeners": {
    "*:8080": {
      "pass": "routes/main"
    },
    "127.0.0.1:8081": {
      "pass": "routes/docker"
    }
  },

  "routes": {
    "main": [
      {
        "match": {
          "uri": "/uploads/*"
        },

        "action": {
          "share": "/var/www/html/user_data$uri"
        }
      },
      {
        "match": {
          "uri": [
            "~\\.(css|gif|html?|ico|jpg|js(on)?|png|svg|ttf|woff2?)$",
            "!*/uploads/*"
           ]
        },

        "action": {
          "share": "/var/www/html/src/public$uri"
        }
      },
      {
        "action": {
          "pass": "applications/dashboard"
        }
      }
    ],

    "docker": [
      {
        "action": {
          "pass": "applications/docker"
        }
      }
    ]
  },

  "applications": {
    "dashboard": {
      "type": "php",
      "root": "/var/www/html/src/public/",
      "script": "index.php"
    },
    "docker": {
      "type": "php",
      "root": "/var/www/html/docker-api/",
      "script": "index.php"
    }
  },
  "access_log": {
    "path": "/var/log/unit/access.log",
    "format": "$remote_addr - - [$time_local] $host \"$request_line\" $status $body_bytes_sent \"$header_referer\" \"$header_user_agent\""
  }
}
